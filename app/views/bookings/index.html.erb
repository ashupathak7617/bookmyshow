<div class="container">
	<div class="row">
		<div class="col-lg-6 mx-auto ">
			<div class="card mt-3 mx-auto">
				<div class="card-header border border-primary">
					<h3 class="text-center">Your Bookings </h3>
				</div>
				<div class="card-body border border-primary ">
					<% @booking.each do |booking| %>
					  <div class="card">
					  	<div class="card-body border border-primary">
							<p><strong>Customer Name : </strong><%= booking.customer.email%></p>
							<p><strong> Movie : </strong><%= booking.movie.name %></p>
							<p><strong> Theater : </strong><%= booking.theater %></p>
						   <p><strong> Seats : </strong><%=booking.booking_details %></p>
							<p><strong> Booking Status : </strong><%="booked"%></p>
						  </div>
						</div>
					<% end %>
        </div>
      </div>
    </div>
  </div>
</div>
