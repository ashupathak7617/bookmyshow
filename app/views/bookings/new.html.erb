<div class="container">
	<div class= "row">
		<div class="col-lg-8 mx-auto">
			<div class="card  screen-side mt-2 border-info">
				<div class="card-header text-center border-info">
					<h4>select seats</h4>
				</div>
				<div class="card-body ">
					<div class="container">
						<div class="mb-3 d-inline-flex">
							<h5 class="btn btn-primary p-10 h-5 w-20"disabled disabled style="height: 25px; width: 20px;"></h5> &nbsp;Available  &nbsp;
							<h5 class="btn btn-success d-inline-flex" style="height: 25px; width: 20px;"></h5>&nbsp;Booked &nbsp;
							<h5 class="btn btn- d-inline-flex" style="height: 25px; width: 20px; background: deeppink;"></h5>&nbsp;selected
						</div>
						<%= form_with model: @booking  do |f| %>
							<div class="text-center row-cols-md-7">
								<%#= f.hidden_field :theater_id, value: @theater.id %>
								<%#= f.hidden_field :movie_id, value: @movie.id %>
								<%= f.hidden_field :customer_id, :value =>current_customer.id %>
								<%= f.hidden_field :show_id, value: @show.id %>
								<% @seats.order(created_at: :asc).each  do |seat| %>
								<div class=" select d-inline-flex ">
								  <%= check_box_tag 'booking[seat_ids][]', seat.id,  class: "mt-2 d-inline-flex ", type:"checkbox", style: 'opacity: 0; position: absolute; height: 33px; width: 38px;', disabled: !seat.status  %>

									<label for="myCheck" class="<%= seat.status ? 'bg- border border-3 border border-info ' : 'bg-success bg- border border-3 border border-info'%> button_size d-inline-flex  rounded rounded-5 mb-1 text-color-success button_select " style="padding: 5px; color: black; width: 38px;"><%= seat.seat_no %></label>
								</div> 
								<% end %> 
							</div>
							<div class="text-center mt-5">
								<%= f.submit "Book Seat", id:"text", class:"btn btn-outline-success "  %> 
							  <%= link_to "Back",movie_shows_path(movie_id: @movie.id), class:"btn btn-outline-primary"%> 
							</div>
						<% end %>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>




















