<div class="container">
  <div class= "row">
    <div class="col-lg-6 mx-auto">
      <div class="card card border-primary mt-2">
        <div class="card-header text-center">
          <h4>Booking Details</h4>
        </div>
        <div class="card-body ">
          <div class="container">
            <div>
							<p><strong>Customer Name : </strong><%= @booking.customer.email%></p>
            	<p><strong> Movie : </strong><%= @show.movie.name %></p>
							<p><strong> Theater : </strong><%= @show.theater.name %></p>
              <p><strong> Screen : </strong><%= @show.screen %></p>
							<p><strong> Seats : </strong><%=@booking.booking_details %></p>
							<p><strong> Booking Status : </strong><%="booked"%></p>
            </div>
            <div>
            	<%= link_to "Back", :back, class:"btn btn-outline-primary" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>