
<div class="container">
  <div class= "row">
    <div class="col-lg-6 mx-auto">
      <div class="card card border-primary mt-2">
        <div class="card-header text-center">
          <h4>select screen</h4>
        </div>
        <div class="card-body ">
          <div class="container">
           <% @screen.each do |screen| %>
             <h1 class="d-inline-flex text-center"><%= link_to screen.screen_name, seats_path(screen_id: screen.id), class:"btn btn-outline-success"%></h1>
           <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
