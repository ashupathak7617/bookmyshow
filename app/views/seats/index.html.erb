<h1>Seats#index</h1>
<p>Find me in app/views/seats/index.html.erb</p>

<div class="container">
  <div class= "row">
    <div class="col-lg-12 mx-auto">
      <div class="card card border-sky mt-2">
        <div class="card-header ">
           <h5>select seat</h5> 
        </div>
        <div class="card-body">
        	<% @theater.screens.each do |screen|%>
        	  <% screen.seats.each do |seat| %>
        	    <p><%= seat.seat_no %></p>
        	    <%= check_box_tag "seat_ids[]", seat.seat_no %>
        	  <% end %>
        	<% end %>  
      	</div>
    </div>
  </div>
</div>
