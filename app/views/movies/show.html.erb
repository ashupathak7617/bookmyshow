

<div class="container">
  <div class= "row">
    <div class="col-lg-8 mx-auto">
      <div class="card card mt-2" , style="background-color: #e3f2fd;">
        <div class="card-header text-center", style="background-color: #e3f2fd;">
          <h4>Movie Details</h4>
        </div>
        	<div class="card text-center">
		        <% if @movie.image.attached? %>
					    <div class=" ">
					      <%=  image_tag  @movie.image, size: "500x420", class: "border border-5  border border-info" %>
					    </div>
		        <% end %>
		      </div>
        <h4 class="text-center"><%= @movie.name %> <br></h4>
        <div class="mx-auto mb-2">
        	<%= link_to "Book Ticket ", shows_path( movie: @movie ), class:"btn btn-outline-success" %>
          <%= link_to "Back", root_path, class: "btn btn-outline-primary"%>
        </div>
      </div>
    </div>
  </div>
</div>
        
          
         
        




