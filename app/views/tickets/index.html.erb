
<div class="container">
  <div class= "row">
    <div class="col-lg-12 mx-auto">
      <div class="card card border-sky mt-2">
        <div class="card-header ">
          <h4><h2><%= @movie.name %></h2></h4>
          <div class="card-body">
	          <% @movie.theaters.each do |theater|%>
	          	<div class="card col-lg-12">
							  <div class="card-body d-inline-flex">
							    <p class="d-inline-flex mt-2" style="padding-right: 20px" > <%= theater.name %> <%=theater.location %>  </p>
                  <% theater.shows.each do |shows| %>
                    <%=link_to shows.show_time, seats_path(id: theater), class:"btn btn-outline-primary mt-1" %>
                  <% end %>
							  </div>
							</div>
						 <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
