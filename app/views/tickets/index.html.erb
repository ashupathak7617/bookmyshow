
<div class="container">
  <div class= "row">
    <div class="col-lg-12 mx-auto">
      <div class="card card border-sky mt-2">
        <div class="card-header ">
          <h4><h2><%= @movie.name %></h2></h4>
          <div class="card-body">
	          <% @movie.theaters.each do |theater|%>
	          	<div class="card col-lg-3">
							  <div class="card-body">
							    <p><%= theater.name %></p>
                  <% @movie.theaters.shows.each do |show| %>
                    <%= show.show_time %>
                  <% end %>
							  </div>
							</div>
						 <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
